{% extends 'hotels/hotels_list.html.twig' %}
{% block hotels_list_view %}
    <div class="hotel-list">
        <div class="row image-box listing-style2">
            {% for hotel in hotels %}
            <div class="col-sms-6 col-sm-6 col-md-4">
                <article class="box">
                    <figure>
                        <a href="{{ path('slideshow_popup') }}" title="" class="hover-effect popup-gallery"><img src="{{ asset(hotel.hotelPhotos.first.photoFilename) }}" alt="" width="270" height="160" /></a>
                    </figure>
                    <div class="details">
                        <a title="View all" href="{{ path('hotel_detailed', {'id':hotel.id}) }}" class="pull-right button uppercase">select</a>
                        <h4 class="box-title">{{ hotel.name }}</h4>
                        <label class="price-wrapper">
                            <span class="price-per-unit">from ${{ hotel.lowestPriceRoom.price }}</span>
                        </label>
                    </div>
                </article>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}