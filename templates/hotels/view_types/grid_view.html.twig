{% extends 'hotels/hotels_list.html.twig' %}
{% block hotels_list_view %}
    <div class="hotel-list">
        <div class="row image-box hotel listing-style1">
            {% for hotel in hotels %}
                <div class="col-sm-6 col-md-4">
                    <article class="box">
                        <figure>
                            <a href="{{ path('slideshow_popup') }}" class="hover-effect popup-gallery"><img width="270" height="160" alt="" src="{{ asset(hotel.hotelPhotos.first.photoFilename) }}"></a>
                        </figure>
                        <div class="details">
                            <span class="price">
                                <small>FROM</small>${{ hotel.lowestPriceRoom.price }}
                            </span>
                            <h4 class="box-title">{{ hotel.name }}<small>{{ hotel.city.name }}, {{ hotel.city.country.name }}</small></h4>
                            <div class="feedback">
                                <div data-placement="bottom" data-toggle="tooltip" class="five-stars-container" title="4 stars"><span style="width: 80%;" class="five-stars"></span></div>
                                <span class="review">{{ hotel.reviews|length }} reviews</span>
                            </div>
                            <p class="description">Nunc cursus libero purus ac congue arcu cursus ut sed vitae pulvinar massa idporta nequetiam.</p>
                            <div class="action">
                                <a class="button btn-small" href="{{ path('hotel_detailed', {'id': 1}) }}">SELECT</a>
                                <a class="button btn-small yellow popup-map" href="#" data-box="48.856614, 2.352222">VIEW ON MAP</a>
                            </div>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}