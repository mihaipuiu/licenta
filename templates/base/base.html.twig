                                <br />
                                <a href="mailto:puiu_mihai.valentin@yahoo.com" class="contact-email">puiu_mihai.valentin@yahoo.com</a>
                            </address>
                            <ul class="social-icons clearfix">
                                <li class="facebook"><a title="facebook" href="https://www.facebook.com/mihaivalentin.puiu" data-toggle="tooltip"><i class="soap-icon-facebook"></i></a></li>
                                <li class="linkedin"><a title="linkedin" href="https://www.linkedin.com/in/mihai-valentin-puiu-35b391b1/" data-toggle="tooltip"><i class="soap-icon-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom gray-area">
                <div class="container">
                    <div class="logo pull-left">
                        <a href="{{ path('index') }}" title="Runaway With Me - home" style="height: 92px !important; width: auto; margin-top: -31px">
                            <img src="{{ asset('images/logo.png') }}" alt="Runaway With Me" style="height: 98px!important; width: auto" />
                        </a>
                    </div>
                    <div class="pull-right">
                        <a id="back-to-top" href="#" class="animated" data-animation-type="bounce"><i class="soap-icon-longarrow-up circle"></i></a>
